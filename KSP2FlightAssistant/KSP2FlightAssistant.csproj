    <Import Project="$(MSBuildToolsPath)\Microsoft.CSharp.targets" />
    <!-- To modify your build process, add your task inside one of the targets below and uncomment it. 
         Other similar extension points exist, see Microsoft.Common.targets.
    <Target Name="BeforeBuild">
    </Target>
    <Target Name="AfterBuild">
    </Target>
    -->
    <PropertyGroup>
        <PostBuildEvent>
            SET KSP2="G:\SteamLibrary\steamapps\common\Kerbal Space Program 2"
            SET MOD=KSP2FlightAssistant
            SET MODPATH=%KSP2:"=%\BepInEx\plugins\%MOD%
            SET MODPATH="%MODPATH%"
            
            echo. &gt; ..\..\build.log

            IF EXIST ..\..\$(ModPath)  DEL /S /Q ..\..\%MOD%\ &amp;&amp; (
            ECHO Deleted %MOD% &gt;&gt; ..\..\build.log
            ) || (
            ECHO Failed to delete %MOD% &gt;&gt; ..\..\build.log
            )

            MKDIR ..\..\%MOD% &amp;&amp; (
            ECHO Created %MOD% &gt;&gt; ..\..\build.log
            ) || (
            ECHO Failed to create %MOD% &gt;&gt; ..\..\build.log
            )

            XCOPY .\%MOD%.dll ..\..\%MOD% &amp;&amp; (
            ECHO Copied %MOD%.dll &gt;&gt; ..\..\build.log
            ) || (
            ECHO XCOPY failed with error code %ERRORLEVEL%. %MOD%.dll &gt;&gt; ..\..\build.log
            )
            
            XCOPY ..\..\swinfo.json ..\..\%MOD% &amp;&amp; (
            ECHO Copied swinfo.json &gt;&gt; ..\..\build.log
            ) || (
            ECHO XCOPY failed with error code %ERRORLEVEL%. swinfo.json &gt;&gt; ..\..\build.log
            )

            
            IF EXIST %MODPATH%  RD /S /Q %MODPATH%\ &amp;&amp; (
            ECHO Deleted %MODPATH% &gt;&gt; ..\..\build.log
            ) || (
            ECHO Failed to delete %MODPATH% &gt;&gt; ..\..\build.log
            )
            
            XCOPY /e /y /i /r ..\..\%MOD% %MODPATH% &amp;&amp; (
            ECHO Copied %MOD% to %MODPATH% &gt;&gt; ..\..\build.log
            ) || (
            ECHO XCOPY failed with error code %ERRORLEVEL%. %MOD% to %MODPATH% &gt;&gt; ..\..\build.log
            )

        </PostBuildEvent>
    </PropertyGroup>
</Project>
